<Window x:Class="DialogWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="140" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
	<DockPanel x:FieldModifier="private" x:Name="MainPanel">
		<TextBox x:FieldModifier="private" Background="Transparent" x:Name="TextResult" VerticalAlignment="Top" DockPanel.Dock="Top" FontSize="15" Height="25"/>
	     <WrapPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
	     	<Button BorderBrush="Transparent" Height="40" Width="147" Background="Transparent" FontSize="15" Click="OkButtonClick">
	     		<Image Source="pack://siteOfOrigin:,,,/ToolIcons/Original/Ok.tif"/>
	     	</Button>
	     	<Button BorderBrush="Transparent" Height="40" Width="147" Background="Transparent" FontSize="15" IsCancel="True">
	     		<Image Source="pack://siteOfOrigin:,,,/ToolIcons/Original/Delete.tif"/>
	     	</Button>
		</WrapPanel>
	</DockPanel>
</Window>